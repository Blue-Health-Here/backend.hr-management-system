{
  "name": "sah-api",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A node js with typescript project template using fastify for api.",
  "main": "src/app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/app.js",
    "build": "tsc -p ./tsconfig.json",
    "dev": "nodemon --exec ts-node ./src/app.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "schema:sync": "npx typeorm-ts-node-commonjs schema:sync",
    "typeorm:cache": "npx typeorm-ts-node-commonjs cache:clear",
    "schema:drop": "npx typeorm-ts-node-commonjs -d ./src/dal/db/db-source.ts",
    "migration:create": "typeorm migration:create ./src/dal/migrations/migration",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/dal/migrations/migration -d ./src/dal/db/db-source.ts",
    "migration:show": "npx typeorm-ts-node-commonjs migration:show -d ./src/dal/db/db-source.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d  ./src/dal/db/db-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/dal/db/db-source.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/multipart": "^9.0.3",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "cron-parser": "^5.0.2",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "fastify": "^5.2.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mathjs": "^14.2.1",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.47",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/ejs": "^3.1.5",
    "@types/handlebars": "^4.1.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/lodash": "^4.17.15",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^22.15.31",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/reflect-metadata": "^0.1.0",
    "@types/socket.io": "^3.0.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
